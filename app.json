{
    "expo" :{
        "name": "Libellule",
        "slug": "libellule",
        "version": "1.1.2",
        "orientation": "portrait",
        "icon": "./assets/ios/logo@3x.png",
        "userInterfaceStyle": "automatic",
        "owner": "libellule",
        "assetBundlePatterns": ["**/*"],
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0760FB",
            "logoWidth": "700"
        },
        "ios": {
            "supportsTablet": false,
            "config": {
                "usesNonExemptEncryption": false
            },
            "googleServicesFile": "./GoogleService-Info.plist",
            "bundleIdentifier": "com.libellule.libellule",
            "entitlements": {
                "aps-environment": "production"
            },
            "buildNumber": "1.31"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0760FB",
                "monochromeImage": "./assets/monochrome.png"
            },
            "googleServicesFile": "./google-services.json",
            "package": "com.libellule.libellule",
            "versionCode": 26
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "newArchEnabled": false,
        "plugins": [
            "expo-font",
            "expo-secure-store",
            "@react-native-firebase/app",
            [
                "expo-build-properties",
                {
                    "ios": {
                        "useFrameworks": "static"
                    }
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Autorisez $(PRODUCT_NAME) à accéder à votre localisation pour afficher la météo locale sur la page d'accueil.”
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Autorise à piocher la meilleure photo dans ta galerie",
                    "cameraPermission": "Autorise à prendre la meilleure photo de toi"
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "142931be-af91-443d-9e7d-57ecd13da335"
            }
        }
    }
}
